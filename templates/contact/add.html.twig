{% extends 'base.html.twig' %}

{% block title %}Add Contact{% endblock %}

{% block body %}

{% apply inline_css(source("style.css"))%}

    <h1>Add Contact</h1>

    <div class="flex-container-column">
    {{ form_start(createContactForm) }}
        {{ form_row(createContactForm.contactName) }}
        {{ form_row(createContactForm.contactLastName) }}
        {{ form_row(createContactForm.contactPhone) }}
        {{ form_row(createContactForm.contactMail) }}
        {{ form_row(createContactForm.contactAddress) }}
        {{ form_row(createContactForm._token) }}

        <button type="submit" class="btn">Add</button>
    </div>
    {%endapply%}
{% endblock %}
